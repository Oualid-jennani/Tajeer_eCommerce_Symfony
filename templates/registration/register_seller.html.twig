

{% extends 'baseDashSecurity.html.twig' %}

{% block title %}{{ 'Seller Registration'|trans }}!{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="section-authentication-signin d-flex align-items-center justify-content-center my-5 my-lg-0">
            <div class="container-fluid">
                <div class="row row-cols-1 row-cols-lg-2 mt-5">
                    <div class="col mx-auto">
                        <div class="mb-4 text-center">
                            <img src="{{ asset('dashAssets/images/logo.png') }}" width="180" alt="" />
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="border p-4 rounded">
                                    <div class="text-center">
                                        <h3 class="">{{ 'Sign Up'|trans }}</h3>
                                        <p><a href="{{ path('security_back_login') }}">{{ 'Login'|trans }}</a>
                                        </p>
                                    </div>
                                    <div class="form-body">
                                        {% for type,messages in app.flashes %}
                                           {% for message in messages %}
                                               <div class="alert alert-{{ type }}">{{ message }}</div>
                                           {% endfor %}
                                        {% endfor%}
                                        {{ form_start(registrationForm,{'attr':{'class':'row g-3'}}) }}

                                        <div class="col-sm-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.username) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Username'|trans }}</label>
                                            {{ form_widget(registrationForm.username) }}
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.fullName) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'FullName'|trans }}</label>
                                            {{ form_widget(registrationForm.fullName) }}
                                        </div>
                                        <div class="col-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.phoneNumber) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Phone Number'|trans }}</label>
                                            {{ form_widget(registrationForm.phoneNumber) }}
                                        </div>
                                        <div class="col-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.cin) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Cin/Id'|trans }}</label>
                                            {{ form_widget(registrationForm.cin) }}
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.storeName) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Store Name'|trans }}</label>
                                            {{ form_widget(registrationForm.storeName) }}
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.storePhone) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Store Phone'|trans }}</label>
                                            {{ form_widget(registrationForm.storePhone) }}
                                        </div>
                                        <div class="col-12">
                                            <div class="text-danger">{{ form_errors(registrationForm.email) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Email'|trans }}</label>
                                            {{ form_widget(registrationForm.email) }}
                                        </div>
                                        <div class="col-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.country) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Country'|trans }}</label>
                                            {{ form_widget(registrationForm.country) }}
                                        </div>
                                        <div class="col-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.province) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Province'|trans }}</label>
                                            {{ form_widget(registrationForm.province) }}
                                        </div>
                                        <div class="col-12">
                                            <div class="text-danger">{{ form_errors(registrationForm.city) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'City'|trans }}</label>
                                            {{ form_widget(registrationForm.city) }}
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.password) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Password'|trans }}</label>
                                            <div class="input-group" id="show_hide_password">
                                                {{ form_widget(registrationForm.password) }}
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="text-danger">{{ form_errors(registrationForm.confirm_password) }}</div>
                                            <label for="inputEmailAddress" class="form-label">{{ 'Comfirm Password'|trans }}</label>
                                            {{ form_widget(registrationForm.confirm_password) }}
                                        </div>
                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-primary"><i class="bx bxs-lock-open"></i>{{ 'Register'|trans }}</button>
                                            </div>
                                        </div>
                                        {{ form_end(registrationForm) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end row-->
            </div>
        </div>
    </div>
{% endblock %}

