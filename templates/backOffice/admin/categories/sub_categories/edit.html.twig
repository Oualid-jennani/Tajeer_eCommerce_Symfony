{% extends 'baseDash.html.twig' %}

{% block body %}

	<!--breadcrumb-->
	<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
		<div class="breadcrumb-title pe-3">{{ 'Sub Category'|trans }}</div>
		<div class="ps-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					<li class="breadcrumb-item"><a href="{{ path('dashboard') }}"><i class="bx bx-home-alt"></i></a></li>
					<li class="breadcrumb-item active" aria-current="page">{{ 'Edit'|trans }}</li>
				</ol>
			</nav>
		</div>
	</div>

	<!--end breadcrumb-->
	<div class="row">
		<div class="col-xl-7 mx-auto">
			<div class="card">
				<div class="card-body">
					{% for type,messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ type }} border-0 bg-{{ type }} alert-dismissible fade show py-2">
								<div class="d-flex align-items-center">
									<div class="font-35 text-white">
										{% if type =="success" %}
											<i class="bx bxs-check-circle"></i>
										{% else %}
											<i class="bx bxs-message-square-x"></i>
										{% endif %}
									</div>
									<div class="ms-3">
										<h6 class="mb-0 text-white">{{ type }}</h6>
										<div class="text-white">{{ message }}</div>
									</div>
								</div>
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endfor %}
					{% endfor %}
					<div class="card-title d-flex align-items-center">
						<h5 class="mb-0 text-primary">{{ 'Edit Sub Category'|trans }}</h5>
					</div>
					<hr>
					{{ form_start(form,{'attr':{'class':'needs-validation clearfix'}}) }}
					<div class="col-md-12">
						<label for="inputName" class="form-label">{{ 'Name'|trans }}</label>
						<div class="col-12">
							<div class="row">
								<div class="col-md-12">
									{{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
									<div class="text-danger">{{ form_errors(form.name)}}</div>
								</div>
								<div class="col-md-12">
									<a href="{{ path('listSubCategory',{'slug':category.slug}) }}" class="btn btn-primary float-start px-5">{{ 'Back'|trans }}</a>
									<button type="submit" class="btn btn-primary float-end px-5">{{ 'Edit'|trans }}</button>
								</div>
							</div>
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>

	</div>
	<!--end row-->
{%  endblock %}
